<%= @goal.description %>
<%= @goal.status %>
<%= @goal.shared_status %>

<%= link_to "Update", edit_goal_url(@goal), method: :get %>
<%= link_to "Delete", goal_url(@goal), method: :delete %>

<% @goal.comments.each do |comment| %>
  <%= comment.body %>
<% end %>

<h2>Add Comment</h2>

<form action="<%= goal_comments_url(@goal) %>" method="post">
<input type="hidden"
  name="authenticity_token"
  value=" <%=form_authenticity_token %>">

<textarea name="comment[body]" id="body"></textarea>

<input type="submit" value="Add Comment">

</form>
